<!-- 오른쪽: 댓글 / 좋아요 / 조회수 -->
<span class="post-meta-right" style="display:flex;align-items:center;gap:8px;">
  <span class="meta-badge comments"
        style="display:inline-flex;align-items:center;gap:6px;padding:2px 8px;border-radius:999px;background:#eef7ff;border:1px solid #cfe4ff;">
    <span>💬</span><strong id="detail-comments">0</strong>
  </span>

  <!-- 좋아요: 버튼처럼 동작하는 뱃지 -->
  
    <span  class="meta-badge like"
          style="display:inline-flex;align-items:center;gap:6px;padding:2px 8px;border-radius:999px;background:#fff0f3;border:1px solid #ffd6de;cursor:pointer;">
    <span>❤️</span><strong id="detail-likes">0</strong>
    </span>

  <span class="meta-badge views"
        style="display:inline-flex;align-items:center;gap:6px;padding:2px 8px;border-radius:999px;background:#f5f7fb;border:1px solid #e3e8f0;">
    <span>👁️</span><strong id="detail-views">0</strong>
  </span>
</span>

    </div> <!-- /post-meta -->
  </div>   <!-- /post-header -->

  <div id="postImages" class="post-images"></div>
  <div id="postContent" class="post-content"></div>

  <div class="post-actions">
  <button class="btn btn-secondary" onclick="goBack()">목록</button>
  <div style="display:flex; gap:8px; margin-left:auto;">
    <button id="detail-like-btn" type="button"
            style="display:inline-flex;align-items:center;gap:6px;padding:6px 10px;
                   border:1px solid #ffd6de;border-radius:999px;background:#fff0f3;cursor:pointer;">
      <span>❤️</span><strong id="detail-like-count">좋아요</strong>
    </button>

    <div id="actionButtons" style="display:none;">
      <button class="btn btn-primary" id="editBtn">수정</button>
      <button class="btn btn-danger"  id="deleteBtn">삭제</button>
    </div>
  </div>
</div>

<!-- 댓글 섹션 추가 -->
 <section id="commentsSection" class="comments-section" style="margin-top:24px">
    <h3> 댓글 <span id="commentCount">0</span></h3>
    <ul id="commentsList" class="comments-list" style="list-style:none; padding:0; margin:12px 0;">

    </ul>

    <div id="commentWriteBox" class="comment-write" style="margin-top:12px;">
    <!-- 로그인 필요 안내 (비로그인 시 노출) -->
    <div id="commentLoginGate" style="display:none; padding:12px; background:#fff7e6; border:1px solid #ffe0b2; border-radius:12px; font-size:14px;">
      댓글을 작성하려면 <a href="/login" style="font-weight:600; text-decoration:underline;">로그인</a>이 필요합니다.
    </div>

    <!-- 작성 폼 (로그인 시 노출) -->
    <div id="commentFormWrap" style="display:none;">
      <textarea id="commentContent" maxlength="255"
                placeholder="댓글을 입력하세요 (최대 255자)"
                style="width:100%; min-height:84px; padding:10px; border:1px solid #e3e8f0; border-radius:12px; resize:vertical; box-sizing:border-box;"></textarea>

      <div class="comment-actions" style="display:flex; justify-content:space-between; align-items:center; margin-top:8px;">
        <span id="commentChars" style="font-size:12px; color:#667085;">0 / 255</span>
        <button id="commentSubmitBtn" class="btn btn-primary" disabled>등록</button>
      </div>
    </div>
  </div>


    <!-- 필요시 더 보기 버튼 -->
     <button id="loadMoreComments" class="btn btn-light" style="display:none;">더 보기</button>
 </section>
 