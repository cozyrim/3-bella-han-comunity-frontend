<!-- 프로필 페이지 - 내 정보 -->
<div class="profile-container">
  <h2>내 정보</h2>

  <div class="profile-info">
    <div class="profile-avatar">
      <img id="profileAvatar" alt="프로필 이미지" />
      <input type="file" id="editProfileImage" accept="image/*" style="display: none;" />
      <button type="button" id="avatarEditBtn" class="avatar-edit-btn">변경</button>
    </div>

    <div class="form-group">
      <label>이메일</label>
      <input type="email" id="profileEmail" readonly>
    </div>

    <div class="form-group">
      <label>닉네임</label>
      <input type="text" id="profileNickname">
    </div>

    <div class="form-actions">
      <button class="btn btn-primary" onclick="handleProfileUpdate()">정보 수정</button>
      <button class="btn btn-secondary" onclick="goToChangePassword()">비밀번호 변경</button>
    </div>
  </div>
</div>